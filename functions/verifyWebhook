import { createClientFromRequest } from 'npm:@base44/sdk@0.7.1';
import Stripe from 'npm:stripe@14.11.0';

const stripe = new Stripe(Deno.env.get('STRIPE_SECRET_KEY'), {
  apiVersion: '2023-10-16'
});

const WEBHOOK_SECRET = Deno.env.get('STRIPE_IDENTITY_WEBHOOK_SECRET');

/**
 * POST /functions/verifyWebhook
 * Handles Stripe Identity verification webhooks
 */
Deno.serve(async (req) => {
  try {
    // Get raw body and signature
    const body = await req.text();
    const signature = req.headers.get('stripe-signature');

    if (!signature) {
      console.error('[verifyWebhook] No signature header');
      return Response.json({ error: 'No signature' }, { status: 400 });
    }

    if (!WEBHOOK_SECRET) {
      console.error('[verifyWebhook] STRIPE_IDENTITY_WEBHOOK_SECRET not configured');
      return Response.json({ error: 'Webhook secret not configured' }, { status: 500 });
    }

    // Verify webhook signature
    let event;
    try {
      event = stripe.webhooks.constructEvent(body, signature, WEBHOOK_SECRET);
    } catch (err) {
      console.error('[verifyWebhook] Signature verification failed:', err.message);
      return Response.json({ error: 'Invalid signature' }, { status: 400 });
    }

    console.log('[verifyWebhook] Event received:', event.type, event.id);

    // Initialize service role client for database updates
    const base44 = createClientFromRequest(req);

    // Handle verification events
    if (event.type === 'identity.verification_session.verified') {
      const session = event.data.object;
      console.log('[verifyWebhook] Verification verified:', session.id);

      // Find profile by session ID
      const profiles = await base44.asServiceRole.entities.Profile.filter({
        verification_session_id: session.id
      });

      if (profiles.length === 0) {
        console.warn('[verifyWebhook] No profile found for session:', session.id);
        return Response.json({ received: true });
      }

      const profile = profiles[0];
      
      // Update profile as verified
      await base44.asServiceRole.entities.Profile.update(profile.id, {
        verified: true,
        verified_at: new Date().toISOString(),
        verification_status: 'verified',
        verification_risk_level: session.last_verification_report?.document?.status || null
      });

      console.log('[verifyWebhook] Profile verified:', profile.email);

      // Log to audit
      try {
        await base44.asServiceRole.entities.AuditLog.create({
          actor_id: 'system',
          actor_name: 'Stripe Identity Webhook',
          entity_type: 'Profile',
          entity_id: profile.id,
          action: 'identity_verified',
          details: `Identity verified via Stripe (session: ${session.id})`,
          timestamp: new Date().toISOString()
        });
      } catch (auditErr) {
        console.warn('[verifyWebhook] Audit log failed:', auditErr.message);
      }
    } 
    else if (event.type === 'identity.verification_session.requires_input') {
      const session = event.data.object;
      console.log('[verifyWebhook] Verification requires input:', session.id);

      // Find profile
      const profiles = await base44.asServiceRole.entities.Profile.filter({
        verification_session_id: session.id
      });

      if (profiles.length === 0) {
        console.warn('[verifyWebhook] No profile found for session:', session.id);
        return Response.json({ received: true });
      }

      const profile = profiles[0];
      
      // Update profile as failed/pending
      await base44.asServiceRole.entities.Profile.update(profile.id, {
        verified: false,
        verification_status: 'failed'
      });

      console.log('[verifyWebhook] Verification failed:', profile.email);

      // Log to audit
      try {
        await base44.asServiceRole.entities.AuditLog.create({
          actor_id: 'system',
          actor_name: 'Stripe Identity Webhook',
          entity_type: 'Profile',
          entity_id: profile.id,
          action: 'identity_verification_failed',
          details: `Identity verification failed (session: ${session.id})`,
          timestamp: new Date().toISOString()
        });
      } catch (auditErr) {
        console.warn('[verifyWebhook] Audit log failed:', auditErr.message);
      }
    }
    else if (event.type === 'identity.verification_session.canceled') {
      const session = event.data.object;
      console.log('[verifyWebhook] Verification canceled:', session.id);

      const profiles = await base44.asServiceRole.entities.Profile.filter({
        verification_session_id: session.id
      });

      if (profiles.length > 0) {
        await base44.asServiceRole.entities.Profile.update(profiles[0].id, {
          verification_status: 'requires_verification'
        });
      }
    }

    // Always return 200 quickly
    return Response.json({ received: true });

  } catch (error) {
    console.error('[verifyWebhook] Error:', error);
    // Still return 200 to avoid retries for unrecoverable errors
    return Response.json({ error: error.message }, { status: 200 });
  }
});