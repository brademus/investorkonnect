import { createClientFromRequest } from 'npm:@base44/sdk@0.7.1';
import Stripe from 'npm:stripe@14.11.0';

Deno.serve(async (req) => {
  const stripe = new Stripe(Deno.env.get('STRIPE_SECRET_KEY'));
  const sig = req.headers.get('stripe-signature');
  
  let event;
  
  try {
    const body = await req.text();
    event = stripe.webhooks.constructEvent(
      body,
      sig,
      Deno.env.get('STRIPE_WEBHOOK_SECRET')
    );
  } catch (err) {
    console.error('‚ö†Ô∏è  Webhook signature verification failed:', err.message);
    return Response.json({ error: `Webhook Error: ${err.message}` }, { status: 400 });
  }

  // Initialize Base44 SDK with service role for admin operations
  const base44 = createClientFromRequest(req);

  try {
    console.log('üîî Stripe webhook:', event.type);

    switch (event.type) {
      case 'checkout.session.completed': {
        const session = event.data.object;
        console.log('‚úÖ Checkout completed:', session.id);

        // Get subscription details
        if (session.subscription) {
          const subscription = await stripe.subscriptions.retrieve(session.subscription);
          
          // Find profile by customer email
          const profiles = await base44.asServiceRole.entities.Profile.filter({ 
            email: session.customer_details?.email 
          });

          if (profiles.length > 0) {
            const profile = profiles[0];
            
            // Determine plan from price ID
            const priceId = subscription.items.data[0]?.price?.id;
            let plan = 'starter';
            if (priceId === Deno.env.get('STRIPE_PRICE_PRO')) plan = 'pro';
            else if (priceId === Deno.env.get('STRIPE_PRICE_ENTERPRISE')) plan = 'enterprise';

            await base44.asServiceRole.entities.Profile.update(profile.id, {
              subscription_tier: plan,
              subscription_status: subscription.status,
              stripe_customer_id: session.customer,
              stripe_subscription_id: subscription.id
            });

            console.log('‚úÖ Updated profile subscription:', profile.email, plan, subscription.status);
          }
        }
        break;
      }

      case 'customer.subscription.created':
      case 'customer.subscription.updated': {
        const subscription = event.data.object;
        console.log('üîÑ Subscription updated:', subscription.id, subscription.status);

        // Find profile by customer ID
        const profiles = await base44.asServiceRole.entities.Profile.filter({
          stripe_customer_id: subscription.customer
        });
        
        if (profiles.length > 0) {
          const profile = profiles[0];
          
          // Determine plan from price ID
          const priceId = subscription.items.data[0]?.price?.id;
          let plan = profile.subscription_tier || 'starter';
          if (priceId === Deno.env.get('STRIPE_PRICE_STARTER')) plan = 'starter';
          else if (priceId === Deno.env.get('STRIPE_PRICE_PRO')) plan = 'pro';
          else if (priceId === Deno.env.get('STRIPE_PRICE_ENTERPRISE')) plan = 'enterprise';

          await base44.asServiceRole.entities.Profile.update(profile.id, {
            subscription_tier: plan,
            subscription_status: subscription.status,
            stripe_subscription_id: subscription.id
          });
          
          console.log('‚úÖ Updated subscription status:', profile.email, subscription.status);
        }
        break;
      }

      case 'customer.subscription.deleted': {
        const subscription = event.data.object;
        console.log('‚ùå Subscription deleted:', subscription.id);

        // Find profile and mark as cancelled
        const profiles = await base44.asServiceRole.entities.Profile.filter({
          stripe_customer_id: subscription.customer
        });
        
        if (profiles.length > 0) {
          const profile = profiles[0];
          
          await base44.asServiceRole.entities.Profile.update(profile.id, {
            subscription_status: 'cancelled',
            subscription_tier: 'none'
          });
          
          console.log('‚úÖ Subscription cancelled for:', profile.email);
        }
        break;
      }

      default:
        console.log(`‚ÑπÔ∏è  Unhandled event type: ${event.type}`);
    }

    return Response.json({ received: true });
  } catch (error) {
    console.error('‚ùå Error processing webhook:', error);
    return Response.json({ error: error.message }, { status: 500 });
  }
});